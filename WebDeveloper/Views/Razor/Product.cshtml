
@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers

@{
    ViewBag.Title = "Product";
}

@helper DisplayPriceRazor(double price)
{
if (@price == 0.0)
{
        <span>Free!!!</span>
}
else
{
        <span>@price</span>
}
}

@helper DisplayDateOrNullRazor(DateTime? date)
{
if (@date == null)
{
        <span>None</span>
}
else
{
        <span>@date</span>
}
}


<h2>Product</h2>
<ul>
    @foreach (var item in Model)
    {
        <li>
            <span>@item.Description</span>
            @DisplayPriceRazor(item.Price)
            <div>
                @CustomHelper.DisplayPriceStatic(item.Price)
            </div>
            <div>
                @Html.DisplayPriceExtension(item.Price)
            </div>
            <div>
                <span>
                    Razor :@DisplayDateOrNullRazor(item.Expiration)
                </span>
                <span>
                    Statict :@CustomHelper.DisplayDateOrNullStatic(item.Expiration)
                </span>
                <span >
                  Extension :  @Html.DisplayDateOrNullExtension(item.Expiration)
                </span>
            </div>
        </li>
    }
</ul>




